<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="#6b6969"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="name"
        android:id="@+id/toDo_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:ellipsize="end" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Date"
        android:id="@+id/toDo_date"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignRight="@id/toDo_title"
        android:layout_alignEnd="@id/toDo_title"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="TEKY"
        android:id="@+id/toDo_text"
        android:layout_below="@+id/toDo_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:ellipsize="end"
        android:paddingTop="10dp" />
    <TextView
        android:id="@+id/toDo_category"
        android:text="cat1"
        android:layout_below="@+id/toDo_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@+id/toDo_category"
        android:text="due1"
        android:id="@+id/toDo_dueDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>