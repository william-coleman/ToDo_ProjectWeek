<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6b6969">

    <EditText
        android:id="@+id/toDo_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text="Title"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        android:layout_margin="10dp"
        android:background="#5fefed" />

    <EditText
        android:id="@+id/toDo_text"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_below="@+id/toDo_title"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:text="ToDo"
        android:textStyle="italic"
        android:textSize="20sp"
        android:background="#5fefed"
        android:gravity="top"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:id="@+id/toDo_category"
        android:text="catEx"
        android:layout_below="@+id/toDo_dueDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/toDo_dueDate"
        android:text="dueEx"
        android:layout_below="@+id/toDo_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="SAVE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="18dp"
        android:id="@+id/save_button" />

</RelativeLayout>